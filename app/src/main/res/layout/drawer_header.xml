<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/banner3_small"
        android:scaleType="centerCrop"
        android:alpha="0.40"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/textView_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_userEmail"
        android:layout_alignStart="@+id/profile_image"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:text="Pisica"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_userName"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView_userName"
        android:layout_marginBottom="8dp"
        android:gravity="left"
        android:text="pisici_sexoase@gmail.com"
        android:textSize="14sp" />

</RelativeLayout>